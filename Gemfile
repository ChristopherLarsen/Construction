source "https://rubygems.org"

gem "jekyll", "~> 3.9.0"
gem "minima", "~> 2.5"
gem "jekyll-feed", "~> 0.12"
gem "jekyll-seo-tag", "~> 2.7"

group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.12"
  gem "jekyll-seo-tag", "~> 2.7"
end

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
platforms :mingw, :mswin, :x64_mingw, :jruby do
  gem "tzinfo", "~> 1.2"
  gem "tzinfo-data"
end
